<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Actualiza Producto</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <img src="{{producto.imagen}}" alt="{{producto.nomcli}}" class="img-fluid product-image" style="max-width: 150px; cursor: pointer;" data-bs-toggle="modal" data-bs-target="#imageModal">
                    </div>
                    
                    <form action="/edit/{{producto.id}}" method="post" enctype="multipart/form-data">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nomcli" id="nomcli" placeholder="Nombres"
                                value="{{producto.nomcli}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="descripcion" class="input-group-text">Descripción</label>
                            <input class="form-control" type="text" name="descripcion" id="descripcion" placeholder="Descripción"
                                value="{{producto.descripcion}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="estado" class="input-group-text">Estado</label>
                            <input class="form-control" type="text" name="estado" id="estado"
                                value="{{producto.estado}}" placeholder="Estado" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="imagen" class="input-group-text">Nueva Imagen</label>
                            <input class="form-control" type="file" name="imagen" id="imagen" accept="image/*">
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success">Actualizar</button>
                            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page"
                                    href="/producto">Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Imagen del Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="{{producto.imagen}}" alt="Imagen del Producto" class="img-fluid">
            </div>
        </div>
    </div>
</div>

<script>
    // JavaScript para mostrar la imagen en el modal al hacer clic en la imagen pequeña
    document.querySelector('.product-image').addEventListener('click', function() {
        const src = this.getAttribute('src');
        document.getElementById('modalImage').setAttribute('src', src);
    });
</script>
