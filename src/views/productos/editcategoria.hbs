<div class="container p-4" style="margin-top:70px;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">Actualiza Categor√≠a</h3>
                </div>
                <div class="card-body">
                    <form id="updateForm" action="/edit/{{cliente.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nomcli" id="nomcli" placeholder="Nombres"
                                value="{{cliente.nomcli}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="stock" class="input-group-text">Stock</label>
                            <input class="form-control" type="text" name="apecli" id="apecli" placeholder="Stock"
                                value="{{cliente.apecli}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="estado" class="input-group-text">Estado</label>
                            <input class="form-control" type="text" name="nrodnicli" id="nrodnicli"
                                value="{{cliente.nrodnicli}}" placeholder="Estado" required>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button type="button" class="btn btn-success" id="updateButton">Actualizar</button>
                            <button class="btn btn-danger"><a class="nav-link link-light" aria-current="page"
                                    href="/producto">Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
